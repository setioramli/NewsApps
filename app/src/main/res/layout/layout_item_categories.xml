<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvStatusName"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:gravity="start|center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toStartOf="@id/ivActive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/categories" />

    <ImageView
        android:id="@+id/ivActive"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_check_primary"
        app:layout_constraintBottom_toBottomOf="@id/tvStatusName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvStatusName"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>